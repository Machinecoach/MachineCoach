import random

random_choice = random.randint(0,2)

computerchoice = 0

user_choice = input('rock, paper, or scissors?: ')
while (user_choice != 'rock' and
    user_choice != 'paper' and
    user_choice !=  'scissors'):
    user_choice = input('rock, paper, or scissors?: ')


YourScore = 0
ComputerScore = 0

if random_choice == 0:
    computerchoice = 'rock'
    print('The Computer chose: rock')
elif random_choice == 1:
    computerchoice = 'paper'
    print('The Computer chose: paper')
elif random_choice == 2:
    computerchoice ='scissors'
    print('The Computer chose: scissors')

if computerchoice == user_choice:
    print('You tied!')
elif random_choice == 0 and user_choice == 'scissors':
    print('You Lose! Try Again!')
    ComputerScore += 1
elif random_choice == 1 and user_choice == 'rock':
    print('You Lose! Try Again!')
    ComputerScore += 1
elif random_choice == 2 and user_choice == 'paper':
    print('You Lose! Try Again!')
    ComputerScore += 1
else:
    print('You Win!')
    YourScore += 1

print(('Your Score:') + str(YourScore))
print(('Computer Score:') + str(ComputerScore))

